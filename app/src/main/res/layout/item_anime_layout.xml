<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="265dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp">

    <ImageView
            android:layout_width="180dp"
            android:layout_height="245dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/animeItemImageView"
            android:background="#44ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"


    />
    <TextView
            android:id="@+id/animeTitleTextView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:textSize="18sp"
            android:padding="2dp"
            android:gravity="center"
            android:hint="Item name"
            android:textColorHint="@color/BackgroundColor"
            android:textColor="@color/BackgroundColor"
            android:background="#aaffffff"
            android:layout_margin="0dp"
            app:layout_constraintTop_toTopOf="@+id/animeItemImageView"
            app:layout_constraintStart_toStartOf="@+id/animeItemImageView"
            app:layout_constraintBottom_toBottomOf="@+id/animeItemImageView"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="@+id/animeItemImageView"/>


</android.support.constraint.ConstraintLayout>